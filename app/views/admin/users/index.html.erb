<div class="admin-user">
  <div class="col-md-12">
    <h3>Users</h3>
  </div>
</div>
<div class="col-md-10 col-md-offset-1 well">
<table class="table table-hover admin-user-listing-table">
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Display Name</th>
    <th></th><th></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.display_name %> </td>
        <td>
          <%= link_to "Store", seller_store_path(user.slug), class: "btn btn-default" %>
        </td>
        <td><%= link_to "Listings", admin_user_path(user), class: "btn btn-default" %></td>
        <% if user.suspended %>
          <td><%= link_to "Unfreeze", admin_unsuspend_user_path(user), class: "btn btn-default"%></td>
        <% else %>
          <td><%= link_to "Freeze", admin_suspend_user_path(user), class: "btn btn-default"%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
